// 这里对colorui的变量添加了Cu-

	/* 标准色 */
	$Cu-red= #e54d42;
	$Cu-orange= #f37b1d;
	$Cu-yellow= #fbbd08;
	$Cu-olive= #8dc63f;
	$Cu-green= #39b54a;
	$Cu-cyan= #1cbbb4;
	$Cu-blue= #0081ff;
	$Cu-purple= #6739b6;
	$Cu-mauve= #9c26b0;
	$Cu-pink= #e03997;
	$Cu-brown= #a5673f;
	$Cu-grey= #8799a3;
	$Cu-black= #333333;
	$Cu-darkGray= #666666;
	$Cu-gray= #aaaaaa;
	$Cu-ghostWhite= #f1f1f1;
	$Cu-white= #ffffff;
	/* 浅色 */
	$Cu-redLight= #fadbd9;
	$Cu-orangeLight= #fde6d2;
	$Cu-yellowLight= #fef2ce;
	$Cu-oliveLight= #e8f4d9;
	$Cu-greenLight= #d7f0db;
	$Cu-cyanLight= #d2f1f0;
	$Cu-blueLight= #cce6ff;
	$Cu-purpleLight= #e1d7f0;
	$Cu-mauveLight= #ebd4ef;
	$Cu-pinkLight= #f9d7ea;
	$Cu-brownLight= #ede1d9;
	$Cu-greyLight= #e7ebed;
	/* 渐变色 */
	$Cu-gradualRed= linear-gradient(45deg, #f43f3b, #ec008c);
	$Cu-gradualOrange= linear-gradient(45deg, #ff9700, #ed1c24);
	$Cu-gradualGreen= linear-gradient(45deg, #39b54a, #8dc63f);
	$Cu-gradualPurple= linear-gradient(45deg, #9000ff, #5e00ff);
	$Cu-gradualPink= linear-gradient(45deg, #ec008c, #6739b6);
	$Cu-gradualBlue= linear-gradient(45deg, #0081ff, #1cbbb4);
	/* 阴影透明色 */
	$Cu-ShadowSize= 6rpx 6rpx 8rpx;
	$Cu-redShadow= rgba(204, 69, 59, 0.2);
	$Cu-orangeShadow= rgba(217, 109, 26, 0.2);
	$Cu-yellowShadow= rgba(224, 170, 7, 0.2);
	$Cu-oliveShadow= rgba(124, 173, 55, 0.2);
	$Cu-greenShadow= rgba(48, 156, 63, 0.2);
	$Cu-cyanShadow= rgba(28, 187, 180, 0.2);
	$Cu-blueShadow= rgba(0, 102, 204, 0.2);
	$Cu-purpleShadow= rgba(88, 48, 156, 0.2);
	$Cu-mauveShadow= rgba(133, 33, 150, 0.2);
	$Cu-pinkShadow= rgba(199, 50, 134, 0.2);
	$Cu-brownShadow= rgba(140, 88, 53, 0.2);
	$Cu-greyShadow= rgba(114, 130, 138, 0.2);
	$Cu-grayShadow= rgba(114, 130, 138, 0.2);
	$Cu-blackShadow= rgba(26, 26, 26, 0.2);

	background-color= var($Cu-ghostWhite);
	font-size= 28rpx;
	color= var($Cu-black);
	font-family= Helvetica Neue, Helvetica, sans-serif;
